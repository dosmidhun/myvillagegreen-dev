    <div class="footer-top wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load }}ms">
      <div class="container">
      		<div class="footer-policy row">
              
              <div class="col-xs-3">
                {% if section.settings.text-po-1 != blank %}
