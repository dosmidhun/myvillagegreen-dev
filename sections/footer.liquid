                {% endif %}
              </div>
        	</div>
        </div>
    </div>
    {% endif %}
    <div class="footer-middle wow fadeInUp"  data-wow-delay="{{ settings.time_lazy_load | times: 2 }}ms"> 
      <div class="container">
        <div class="row">
        <div class="three-col clearfix">
        {% if section.settings.footer_column_1_title != blank %}
        <div class="col-xs-3">
          <h6>{% include 'multilang' with section.settings.footer_column_1_title %}</h6>

          <ul>
            {% assign footerCol1 = section.settings.footer_column_1_content | handleize %}
            {% for link in linklists[footerCol1].links %}
            <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
        {% if section.settings.footer_column_2_title != blank %}
        <div class="col-xs-3">
          <h6>{% include 'multilang' with section.settings.footer_column_2_title %}</h6>
          <ul>
            {% assign footerCol2 = section.settings.footer_column_2_content | handleize %}
            {% for link in linklists[footerCol2].links %}
            <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %}
        {% if section.settings.footer_column_3_title != blank %}
        <div class="col-xs-3">
          <h6>{% include 'multilang' with section.settings.footer_column_3_title %}</h6>
          <ul>
            {% assign footerCol3 = section.settings.footer_column_3_content | handleize %}
            {% for link in linklists[footerCol3].links %}
            <li><a href="{{ link.url}}">{% include 'multilang' with link.title %}</a></li>
            {% endfor %}
          </ul>
        </div>
        {% endif %} 
        <div class="col-xs-3">
          
          {% comment %}
         {% if section.settings.footer_display_newsletter %}
          <h6 class="title">{% include 'multilang' with section.settings.footer_newsletter_title %}</h6>
          <span class="sub-tit">{% include 'multilang' with section.settings.footer_newsletter_des %}</span>

          
          <div class="inner-form-subscribe">
			  {% include 'newsletter-form' %}
          </div>
		
        
        {% endif %}
        {% endcomment %}
          {% if settings.display_social_footer %}
          <h6 class="title">{% include 'multilang' with settings.social_home_headding %}</h6>
          <div class="ftr_addrs">
          		{{ section.settings.footer_addrs }}
          </div> 
          <div class="social-footer"> 
           {% include 'social' %}
          </div>
        

          {% endif %}
       
        </div>
        </div>
      </div>
      </div>
    </div>
    <div class="footer-bottom  wow fadeInUp" data-wow-delay="{{ settings.time_lazy_load | times: 3 }}ms">
      <div class="container">
        {% if section.settings.display_footer_address and section.settings.footer_address_code != blank %}
      <address class="col-xs-12">{% include 'multilang' with section.settings.footer_address_code %}</address>
        {% endif %}
      
