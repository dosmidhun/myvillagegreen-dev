        "label": "Header Top Message",
        "default": "Summer Sale Up to 70% Off. Shop Now"
      },
      {
        "type": "color",
        "id": "header_top_message_text_color",
        "label": "Header Top Message Text Color",
        "default": "#3c3c3c"
      },
        {
        "type": "header",
        "content": "Header Bottom"
      },
      {
        "type": "color",
        "id": "bg_button_search_color",
        "label": "Background button color",
        "default": "#787f8d"
      },
      {
        "type": "color",
        "id": "color_text_search_color",
        "label": "Text button color",
        "default": "#fff"
