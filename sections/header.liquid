      },
      {
        "type": "text",
        "id": "header_text_number",
        "label": "Header Phone Number",
        "default": "(800) 000 8090"
      },
      {
        "type": "text",
        "id": "customer_care",
        "label": "Customer Care",
        "default": "#"
      },
      {
        "type": "text",
        "id": "account_btn",
        "label": "My Account",
        "default": "#"
      },
      {
        "type": "text",
        "id": "wishlist_btn",
        "label": "Wish List",
        "default": "#"
      },
      {
        "type": "text",
        "id": "blog_btn",
        "label": "Blog",
        "default": "#"
      },
      {
        "type": "color",
        "id": "header_phone_number_background",
        "label": "Background color",
        "default": "#f6740a"
      },
      {
        "type": "header",
        "content": "Cart Header"
      },
      {
        "type": "color",
        "id": "border_cart_color",
        "label": "Border Color Cart",
