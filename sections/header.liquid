      },
      {
        "type": "header",
        "content": "Header color"
      },
      {
        "type": "color",
        "id": "header_top_bg_color",
        "label": "Header Top Background Color",
        "default": "#eeeeef"
      },
      {
        "type": "color",
        "id": "header_top_color",
        "label": "Header Top Text Color",
        "default": "#3c3c3c"
      },
      {
        "type": "color",
        "id": "header_bottom_bg_color",
        "label": "Header Bottom Background Color",
        "default": "#3a3e46"
      },
      
      {
        "type": "color",
        "id": "header_bottom_color",
        "label": "Header Bottom Text Color",
        "default": "#fff"
      },
      
      {
        "type": "header",
        "content": "Header Top"
      },
      {
        "type": "checkbox",
        "id": "display_header_free_shipping",
