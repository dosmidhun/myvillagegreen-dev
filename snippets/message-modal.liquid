<div class="loading-modal modal" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.loading"{% endif %}>{{ 'cart.ajax_cart.loading' | t }}...</div>
<div class="ajax-error-modal modal">
  <div class="modal-inner">
    <div class="ajax-error-title" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.error"{% endif %}>{{ 'cart.ajax_cart.error' | t }}</div>
    <div class="ajax-error-message"></div>
  </div>
</div>
<div class="ajax-success-modal modal">
    <div class="overlay"></div>
  <div class="content">
      <div class="ajax-left">
        <img class="ajax-product-image" alt="&nbsp;" src="" style="max-width:64px; max-height:64px;object-fit:cover;"/>
      </div>
      <div class="ajax-right">
        <p class="ajax-product-title"></p>
        <p class="success-message btn-go-to-cart" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.success_text"{% endif %}>{{ 'cart.ajax_cart.success_text' | t }}</p>
        <p class="success-message btn-go-to-wishlist" {% if settings.enable_multilang %}data-translate="wishlist.ajax_wishlist.success_text"{% endif %}>{{ 'wishlist.ajax_wishlist.success_text' | t }}</p>        
      </div>
    <div class="actions">
          <button class="btn-secondary continue-shopping shadow" onclick="javascript:void(0)" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.continue_shopping"{% endif %}>{{ 'cart.ajax_cart.continue_shopping' | t }}</button>
          <button class="btn-secondary btn-go-to-cart shadow" onclick="window.location='/cart'" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.go_to_cart"{% endif %}>{{ 'cart.ajax_cart.go_to_cart' | t }}</button>
          <button class="btn-secondary btn-go-to-wishlist shadow" onclick="window.location='/pages/wish-list'" {% if settings.enable_multilang %}data-translate="wishlist.ajax_wishlist.go_to_wishlist"{% endif %}>{{ 'wishlist.ajax_wishlist.go_to_wishlist' | t }}</button>
        </div>
    <a href="javascript:void(0)" class="close-modal" {% if settings.enable_multilang %}data-translate="cart.ajax_cart.close"{% endif %}>{{ 'cart.ajax_cart.close' | t }}</a>
  </div>    
</div>

<div class="newsletter-success-modal">
  <div class="modal-overlay"></div>
  <div class="halo-modal-content">
    <a class="close close-modal" title="{{ 'cart.ajax_cart.close' | t }}">
      {% include 'icon-close' %}
    </a>

    <div class="halo-modal-body">
      <i class="fa fa-check" aria-hidden="true"></i>
      <span>{{settings.newssletter_success_text}}</span>
    </div>
  </div>     
</div>